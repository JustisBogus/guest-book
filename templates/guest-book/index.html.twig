{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <h6 class="border-bottom border-gray pb-2 mb-0">Public</h6>
    {% for message in messages %}
        <a href="{{ path('message', {'id': message.id}) }}">
            {{ include('guest-book/raw-message.html.twig', {'message': message}) }}
        </a>
        <small class="d-block text-right mt-3">
            {% if is_granted('edit', message) %}
                <a href="{{ path('message_edit', {'id': message.id}) }}">Edit</a>
            {% endif %}
            {% if is_granted('delete', message) %}
                <a href="{{ path('message_delete', {'id': message.id}) }}">Delete</a>
            {% endif %}
        </small>
    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(messages) }}
    </div>
{% endblock %}