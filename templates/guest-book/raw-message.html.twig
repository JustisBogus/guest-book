<div class="card">
  <div class="card-header">
    {{message.time|date("d/m/Y")}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{message.text}}</p>
      <footer class="blockquote-footer">{{ message.user.username }} has posted {{ message.user.messages|length }} messages</footer>
    </blockquote>
  </div>
</div>