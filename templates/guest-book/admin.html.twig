{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <h6 class="border-bottom border-gray pb-2 mb-0">Admin</h6>
    {% for message in messages %}
        <div class="d-block text-right mt-3">
            <a class="message-edit" href="{{ path('message_edit', {'id': message.id}) }}">Edit</a>
            <a class="message-delete text-danger" href="{{ path('message_delete', {'id': message.id}) }}">Delete</a>
         </div>
        <a href="{{ path('message', {'id': message.id}) }}">
            {{ include('guest-book/raw-message.html.twig', {'message': message}) }}
        </a>
    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(messages) }}
    </div>
{% endblock %}